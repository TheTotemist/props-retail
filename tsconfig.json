{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": [],
    "resolveJsonModule": true,
    "allowJs": true
  }
}
